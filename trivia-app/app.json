{
  "expo": {
    "name": "trivia-app",
    "slug": "trivia-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/quiz/trivia_logo.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "backgroundColor": "#132f94",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/quiz/trivia_logo.png",
        "backgroundColor": "#132f94"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/quiz/trivia_logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/quiz/logo-1.png",
          "resizeMode": "contain",
          "backgroundColor": "#132f94"
        }
       
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "assetBundlePatterns": [
      "**/*"
    ]
  }
}
